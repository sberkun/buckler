target C {
    build: "./script/newscript.sh HelloWorld"
}
reactor HelloWorld2 {
    state success:bool(false);
    reaction(startup) {=
        printf("Hello World.\n");
        self->success = true;
    =}
    reaction(shutdown) {=
        printf("Shutdown invoked.\n");
        if (!self->success) {
            fprintf(stderr, "ERROR: startup reaction not executed.\n");
            exit(1);
        }
    =}
}

main reactor HelloWorld {
    a = new HelloWorld2();
}

